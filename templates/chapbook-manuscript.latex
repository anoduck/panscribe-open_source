    \usepackage{setspace}


% === HEADINGS ==========================================
% Make all headings block-style, 12pt CourierPrime, bold, and on their own line
% Ensure uniform spacing: One blank line above, no extra space below
    \RedeclareSectionCommands[
      beforeskip=12pt,
      afterskip=0pt,
      font=\bfseries\fontsize{12pt}{12pt}\selectfont
    ]{section,subsection,subsubsection,paragraph,subparagraph}


