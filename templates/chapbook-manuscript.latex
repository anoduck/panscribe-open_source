$-- === DOCUMENT CLASS & CORE SETUP ====================================
% Sets up the basic document structure and loads essential packages.

% The documentclass options are populated from Pandoc variables:
% - fontsize: Controls base text size (e.g., 10pt, 11pt, 12pt)
% - papersize: Paper dimensions (e.g., letter, a4)
% - classoption: Additional document class options
  \documentclass[
    12pt,            % Standard manuscript format requires 12pt font size
    oneside,         % Manuscripts are typically single-sided
    paper=letter,    % Standard manuscript format uses US Letter size
    BCOR=0mm,        % No binding correction needed for a manuscript
    parskip=full-,   % Full-line paragraph spacing, ensures no extra space at the end
    headings=normal, % Standard headings
    chapterprefix=false,% Disables "Chapter" prefix in titles
    open=any,        % Allows chapters to start on any page
    secnumdepth=0    % Disables numbering for parts, chapters, and sections
  ]{scrbook}

% - xcolor: Color support
  \usepackage{xcolor}

% - geometry: Page layout control
  \usepackage[letterpaper, margin=1in, heightrounded]{geometry} % Standard 1-inch margins

% - amsmath,amssymb: Mathematical symbols and environments
  \usepackage{amsmath,amssymb}


$--

$-- === FONTS ===========================================
$-- Originally: $fonts.latex()$
% Handles font loading and configuration for different TeX engines:
% - LuaTeX: Programmable engine with system font support
% Configures:
% - Font encoding and input encoding
% - Unicode math support
% - Default font features and families


% - fontspec: Font selection (only for LuaLaTeX)
    \usepackage{fontspec}

    \defaultfontfeatures{
      Kerning=Off,
      WordSpace=1,
      LetterSpace=0, % No extra spacing adjustments
      Ligatures=NoCommon, % Disable ligatures
      RawFeature={+zero}, % Enable slashed zero for clarity
      Scale=1 % Preserve original design fidelity
    }

% Set default fonts
    \IfFontExistsTF{CourierPrime}{
      \setmainfont{CourierPrime}
      \setsansfont{CourierPrime}
      \setmonofont{CourierPrime}
    }{
      \setmainfont{Latin Modern Mono}
      \setsansfont{Latin Modern Mono}
      \setmonofont{Latin Modern Mono}
    }

% Microtypography enhancements
  \usepackage{upquote} % Ensures straight quotes in verbatim environments
  \usepackage{microtype} % Enhances typographic spacing and justification
    \microtypesetup{
      expansion=false, % No stretching (monospace font)
      protrusion=true, % Adjust punctuation spacing slightly
    }

